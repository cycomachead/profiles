

<%= stylesheet_link_tag "users" %>

<div class="container emp-profile">
  <div class="row">
    <h1>Edit User</h1>
  </div>
  <%= form_with(model: @user, local: true) do |form| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="row">
        <div class="field">
            <%= form.label :name %>
            <%= form.text_field :name, size: "40x2" %>
        </div>
      </div>

      <div class="row">
        <div class="field">
          <%= form.label :image %>
          <%= form.file_field :image %>
        </div>
      </div>

      <div class="row">
        <div class="field">
            <%= form.label :major %>
            <%= form.text_field :major, size: "40x2" %>
        </div>
      </div>

      <div class="row">
        <div class="field">
            <%= form.label :courses %>
              <% User.courses_list.each do |course| %>
                <% if @user.courses %>
                  <%= check_box_tag 'courses[]', course, (@user.courses.split.include? course) -%>
                <% else %>
                  <%= check_box_tag 'courses[]', course, false -%>
                <% end %>
                <%= h course -%>
              <% end %>
        </div>
      </div>

      <div class="row">
        <div class="field">
          <%= form.label :about %>
          <div>
            <%= form.text_area :about, size: "70x7" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="field"
          <%= form.label :philosophy %>
          <div>
            <%= form.text_area :philosophy, size: "100x10"%>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="actions">
          <%= form.submit %>
        </div>
      </div>
    <% end %>


  <%= link_to 'Back', users_path %> |
  <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
