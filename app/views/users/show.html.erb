<% if notice %>
  <%= notice %>
<% end %>

<%= stylesheet_link_tag "users" %>

<div class="container emp-profile">
    <div class="row">
      <form action=<%= users_path %> method="GET">
          <input type="submit" class="back-btn" name="btnAddMore" value="All Profiles    "/>
      </form>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="profile-img">
                <%= image_tag("user.svg") %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="profile-head">
                <h5 style="padding-top: 16px; font-size: 30px;">
                    <%= @user.name%>
                </h5>
                <h6 style="margin-bottom: 60px;">
                    <%=@user.name%>
                </h6>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                    </li>
                    <!-- <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Background</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="false">Reviews</a>
                    </li> -->
                </ul>
            </div>
        </div>
        <% if current_user && @user.id == current_user.id %>
          <div class="col-md-2">
          	<form action=<%= edit_user_path(@user) %> method="GET">
              	<input type="submit" class="profile-edit-btn" name="btnAddMore" value="Edit Profile"/>
          	</form>
          </div>
        <% end %>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="profile-work">
                <p>Courses Taught</p>
                <% @user.courses.split.each do |berkeley_class| %>
                <div class="value" >
                    <label> <%= berkeley_class  %> </label>
                </div>
                <% end %>
            </div>
        </div>
        <div class="col-md-8">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab" style="padding: 0 20px 20px 20px;">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Email</label>
                        </div>
                        <div class="col-md-6 field">
                            <p><%= @user.email%></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Years in School</label>
                        </div>
                        <div class="col-md-6 field">
                            <p><%= @user.year%></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Major</label>
                        </div>
                        <div class="col-md-6 field">
                            <p><%= @user.major%></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>About</label>
                        </div>
                        <div class="col-md-6">
                            <p><%= @user.about %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Philosophy</label>
                        </div>
                        <div class="col-md-6">
                          <p><%= @user.philosophy %></p>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="row">
                        <div class="col-md-6">
                            <label>About</label>
                        </div>
                        <div class="col-md-6">
                            <p><%= @user.about %></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Philosophy</label>
                        </div>
                        <div class="col-md-6">
                          <p><%= @user.philosophy %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
