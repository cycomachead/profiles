<p id="notice"><%= notice %></p>

<% if user = current_user %>
  Logged in as <%= current_user.email %>.
  <%= link_to 'Log Out', logout_path %>
  <%= link_to 'View Profile', user_path(user) %>
<% else %>
  <%= link_to "Sign Up", signup_path %> |
  <%= link_to "Log In", login_path %>
<% end %>

<h1>Tutors</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Image</th>
      <th>Name</th>
      <th>About</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user.email %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.image %></td>
          <td><%= user.name %></td>
          <td><%= user.about %></td>
          <td><%= link_to 'Show', user %></td>
          </tr>
      <% end %>
    <% end %>
  </tbody>
</table>